@import './vars'

.modal
  z-index 10
  flex-basis 45%
  background $color-component-background
  min-height 100px
  border-radius 2px
  border none
  box-shadow 3px 4px 2px 0px rgba(0, 0, 0, .4);

  .header
    padding .8em 1em
    display flex

    i
      margin-left auto
      font-size 20px
      font-weight 700
      color white
      cursor pointer

      &:hover
        color $color-text

  .body
    padding 1em .8em